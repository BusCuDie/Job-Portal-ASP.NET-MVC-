@model IEnumerable<TUYENDUNGVIECLAM.Models.Job>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}




<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        DataTable Example
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Tiêu đề</th>
                    <th>Tỉnh thành</th>
                    <th>Loại hình</th>
                    <th>Full/Part time</th>
                    <th>Hạn nộp</th>
                    <th>Lương</th>
                    <th>Chờ duyệt</th>
                    <th>Xem</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Tiêu đề</th>
                    <th>Tỉnh thành</th>
                    <th>Loại hình</th>
                    <th>Full/Part time</th>
                    <th>Hạn nộp</th>
                    <th>Lương</th>
                    <th>Chờ duyệt</th>
                    <th>Xem</th>
                </tr>
            </tfoot>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.job_title</td>
                        <td>@item.job_location</td>
                        <td>@item.job_category</td>
                        <td>@item.job_type</td>
                        @{

                            String hannop = String.Format("{0:dd/MM/yyyy}", item.job_starttime);
                            <td>@hannop</td>

                        }

                        <td>@item.job_salar</td>
                        <td><a href="@Url.Action("AcceptJob","Admin",new { id=item.job_id})">Duyệt</a></td>
                        <td><a href="@Url.Action("JobDetails","Admin",new { id=item.job_id})">Xem</a></td>
                    </tr>
                            }

            </tbody>
        </table>
    </div>
</div>