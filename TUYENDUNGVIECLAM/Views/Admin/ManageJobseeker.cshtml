@model IEnumerable<TUYENDUNGVIECLAM.Models.Jobseeker>

@{
    ViewBag.Title = "ManageJobseeker";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}




<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        @Html.ActionLink("Thêm mới", "AddAJobseeker")
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Ho và tên</th>
                    <th>Tỉnh </th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Tình trạng hiện tại</th>

                    <th>Xem</th>
                    <th>Xóa</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Ho và tên</th>
                    <th>Tỉnh </th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Tình trạng hiện tại</th>
                    <th>Xem</th>
                    <th>Xóa</th>
                </tr>
            </tfoot>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.name</td>
                        <td>@item.place</td>
                        <td>@item.email</td>
                        <td>@item.phone</td>
                        <td>@item.current_role</td>

                        <td><a href="@Url.Action("DetailJSK","Admin",new { username = item.username.Trim()})">Xem</a></td>
                        <td><a href="@Url.Action("DeleteJSK","Admin",new { username = item.username.Trim()})">Xóa</a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>