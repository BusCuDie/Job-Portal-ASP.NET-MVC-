
@{
    ViewBag.Title = "ListApplyMyJob";
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}
<div style="text-align:center;margin:15px auto;color:#1e3799">
    <h3>DANH SÁCH ỨNG TUYỂN CÔNG VIỆC NÀY</h3>
</div>
<<section class="find-job section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @foreach (var item in ViewBag.ListApplyMyJob)
                {
                    <div class="job-list">
                        <div class="thumb">
                            <a href="#"><img src="~/assets/img/logo/enterprise.png" alt=""></a>
                        </div>
                        <div class="job-list-content">
                            <h3><a href="#">@item.name</a></h3>
                            <p style="padding:5px;">@item.aboutme</p>
                            <div class="job-tag">
                                <div class="pull-left">
                                    <div class="meta-tag">

                                        <span><i class="ti-location-pin"></i>@item.aboutme</span>
                                        <span><i class="fa fa-money"></i>@item.educational</span>
                                    </div>
                                </div>
                                <div class="pull-right">
                                    <div class="icon">

                                    </div>
                                    <a href="@Url.Action("Jobseeker_Profile","Jobseeker",new {id =item.username})" class="btn btn-primary">Xem hồ sơ</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }


            </div>

        </div>
    </div>
</section>

