@model IEnumerable<TUYENDUNGVIECLAM.Models.Job>

@{
    ViewBag.Title = "JobPosted";
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}



<section class="find-job section">
    <div class="container">
        <h2 class="section-title">Công việc đã đăng</h2>
        <div class="row">
            <div class="col-md-12">
                @foreach (var item in Model)
                {
                    <div class="job-list">
                        <div class="thumb">
                            <a href="job-details.html"><img src="assets/img/jobs/img-1.jpg" alt=""></a>
                        </div>
                        <div class="job-list-content">
                            <h4><a href="job-details.html">@item.job_title</a><span class="full-time">@item.job_type</span></h4>
                            <p>@item.job_description</p>
                            <div class="job-tag">
                                <div class="pull-left">
                                    <div class="meta-tag">
                                        <span><a href="browse-categories.html"><i class="ti-brush"></i>Art/Design</a></span>
                                        <span><i class="ti-location-pin"></i>@item.job_location</span>
                                        <span><i class="ti-time"></i>@item.job_salar</span>
                                    </div>
                                </div>
                                <div class="pull-right">
                                    <div class="icon">
                                        <i class="ti-heart"></i>
                                    </div>
                                    @if (item.job_state == 1)
                                    {
                                        <a href="@Url.Action("Delete","Job",new {id =item.job_id})" class="btn btn-common btn-rm">Xóa bài</a>
                                  
                                        <a href="@Url.Action("Details","Job",new {id =item.job_id})" class="btn btn-common btn-rm">Xem</a>
                                        <a href="@Url.Action("ListApplyMyJob","Employer",new {job_id =item.job_id})" class="btn btn-common btn-rm">Danh sách ứng tuyển</a>

                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Delete","Job",new {id =item.job_id})" class="btn btn-common btn-rm">Xóa bài</a>
                                        <a href="@Url.Action("Details","Job",new {id =item.job_id})" class="btn btn-common btn-rm">Chi tiết</a>
                                        <a href="#" class="btn btn-primary btn-rm">Đang chờ duyệt</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }


            </div>

        </div>
    </div>
</section>

