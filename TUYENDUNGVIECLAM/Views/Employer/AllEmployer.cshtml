@model IEnumerable<TUYENDUNGVIECLAM.Models.Employer>

@{
    ViewBag.Title = "AllEmployer";
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}

<<section class="find-job section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @foreach (var item in Model)
                {
                    <div class="job-list">
                        <div class="thumb">
                            <a href="#"><img src="~/assets/img/logo/enterprise.png" alt=""></a>
                        </div>
                        <div class="job-list-content">
                            <h3><a href="#">@item.name</a></h3>
                            <p style="padding:5px;">@item.aboutus</p>
                            <div class="job-tag">
                                <div class="pull-left">
                                    <div class="meta-tag">

                                        <span><i class="ti-location-pin"></i>@item.location</span>
                                        <span><i class="fa fa-money"></i>Lương thỏa thuận</span>
                                    </div>
                                </div>
                                <div class="pull-right">
                                    <div class="icon">

                                    </div>
                                    <a href="@Url.Action("EmployerProfile","Employer",new {id =item.username.Trim()})" class="btn btn-primary">Xem hồ sơ</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }


            </div>

        </div>
    </div>
</section>
